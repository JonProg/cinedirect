<div class="pagination">
    <% if (numberPage > 1) { %>
        <div class="page-item"><a class="page-link" href="?movie=<%= inputValue %>&page=<%= numberPage - 1 %>">
            <i class="fa-solid fa-arrow-left"></i>
        </a></div>
    <% } %>
    <% for (let i = 1; i <= totalPages; i++) { %>
        <div class="page-item <%= i === numberPage ? 'active' : '' %>">
            <a class="page-link" href="?movie=<%= inputValue %>&page=<%= i %>"><%= i %></a>
        </div>
    <% } %>
    <% if (numberPage < totalPages) { %>
        <div class="page-item"><a class="page-link" href="?movie=<%= inputValue %>&page=<%= numberPage + 1 %>">
            <i class="fa-solid fa-arrow-right"></i>
        </a></div>
    <% } %>
</div>