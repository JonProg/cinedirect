<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CineDirect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include('partials/_search') %>
    <% if (movies) { %>
        <div class="container mt-5">
            <div class="row">
                <%for (const movie of movies) { %>
                    <div class="col text-center">
                        <a href="/movie/<%= movie.id %>">
                            <img src="<%= imgURL %>w200<%= movie.poster_path %>" alt="poster <%= movie.title %>">
                        </a>
                        <p style="font-size:large; font-weight:500 ;"><%= movie.title %>
                            <br>(<%= movie.release_date %>)</p>
                    </div>
                <%}%>
            </div>
        </div>
    <% } else if (inputValue) { %>
        <div class="mt-5 text-center">
            <h3>"<%= inputValue %>" não existe no nosso catálogo de filmes</h3>
        </div>
    <% } %>
    <%- include('partials/_footer') %>
</body>
</html>
