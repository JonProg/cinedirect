<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CineDirect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
    <body>
        <%- include('partials/_search') %>
        <div class="w-50 mx-auto text-center mt-5">
            <% if (movie) { %>
                <img src="<%= imgURL %>w200<%= movie.poster_path %>"
                loading="lazy" alt="poster <%= movie.title %>">
                <div class="p-4">
                    <h3><%= movie.title %></h3>
                    <h5> 
                    <span>GÃªneros:</span>
                    (<%for (const genre of movie.genres) { %>
                        <span><%= genre.name%></span>
                    <%}%>) |
                    <%= movie.release_date %> 
                    </h5>
                    <div class="p-2">
                        <h7><%= movie.overview %></h7>
                    </div>
                </div>
                <img src="<%= imgURL %>w500<%= movie.backdrop_path %>"
                loading="lazy" alt="image of <%= movie.title %>">
            <% } %>
            <div class="p-3">
                <h4>Links para o filme:</h4>
                <% if (Object.keys(links).length !== 0) { %>
                    <% for(const link in links) { %>
                        <a style="font-size: larger;"
                        href="<%= links[link] %>" target="_blank"><%= link %></a>
                    <% } %>
                <% } else { %>
                    <p>Nenhum link para o filme escolhido</p>
                <% } %>
            </div>
        </div>

        <%- include('partials/_footer') %>
    </body>
</html>
