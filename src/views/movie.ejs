<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CineDirect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
    <body>
        <%- include('partials/_search') %>
        <div class="mx-auto text-center mt-5">
            <% if (movie) { %>
                <img src="<%= imgURL %>w200<%= movie.poster_path %>"
                loading="lazy" alt="poster <%= movie.title %>">
                <div class="p-4 text-center">
                    <h3><%= movie.title %></h3>
                    <h5> 
                    <span>GÃªneros:</span>
                    (<%for (const genre of movie.genres) { %>
                        <span><%= genre.name%></span>
                    <%}%>) |
                    <%= movie.release_date %> 
                    </h5>
                    <div class="p-2" style="width: auto;">
                        <h7><%= movie.overview %></h7>
                    </div>
                </div>
                <img src="<%= imgURL %>w500<%= movie.backdrop_path %>"
                class="img-fluid" alt="Responsive image" loading="lazy"
                alt="image of <%= movie.title %>">
            <% } %>
            <div class="p-3">
                <h4>Links para o filme:</h4>
                <% if (links) { %>
                    <div class="mt-4 mb-4 d-flex justify-content-center gap-3">
                        <% for(const link in links) { %>
                            <a class="p-3 text-center bg-dark hover-bg-primary" style="font-size: larger;
                            color: white;
                            text-decoration: none;
                            border-radius: 0.5rem;"
                            href="<%= links[link] %>" target="_blank"><%= link %></a>
                        <% } %> 
                    </div>
                <% } else { %>
                    <p>Nenhum link para o filme escolhido</p>
                <% } %>
            </div>
        </div>

        <%- include('partials/_footer') %>
    </body>
</html>
